<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     
    <TextView
        android:id="@+id/products_list_view_item.name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minLines="1" 
        android:textSize="30sp"
        android:background="#FFAAAA"
        android:textColor="#000000"/>
    
    <ImageView android:id="@+id/products_list_view_item.thumbnail_icon" 
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:minWidth="64dp"
                android:minHeight="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/products_list_view_item.price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/products_list_view_item.name_textview"
        android:minLines="1" 
        android:textColor="#000000"/>
        <!--android:layout_alignTop="@id/products_list_view_item.thumbnail_icon" -->

</RelativeLayout>
