<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
     
    <TextView android:id="@+id/products_list_view_item.name_textview" 
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"/>
    
    <ImageView android:id="@+id/products_list_view_item.thumbnail_icon" 
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:minWidth="64dp"
                android:minHeight="64dp"/>
    <TextView android:id="@+id/products_list_view_item.price_textview" android:layout_alignTop="@+id/products_list_view_item.thumbnail_icon"/>
</RelativeLayout>
